- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid
    .row
      .col-md-3
        = render "layouts/system_search"
      .col-md-2
        = link_to "添加", new_trade_order_path, :class => "btn btn-info"
    .row.buyer-table-ctn
      .col-md-12
        %table.table.text-center.table-bordered.table-list-search
          %thead
            %tr
              %th #
            
              %th 
                = Setting.trade_orders.number
              %th 
                = Setting.trade_orders.price
              %th 
                = Setting.trade_orders.state
              %th 
                = Setting.trade_orders.name
              %th 
                = Setting.trade_orders.phone
              %th 
                = Setting.trade_orders.address
              %th
          %tbody
            - @trade_orders.each_with_index do |trade_order, index|
              %tr
                %td
                  = index+1
              
                %td
                  = trade_order.number
                %td
                  = trade_order.price
                %td
                  = trade_order.state
                %td
                  = trade_order.name
                %td
                  = trade_order.phone
                %td
                  = trade_order.address
                %td
                  = link_to "查看", trade_order_path(trade_order), :class => "btn btn-primary btn-sm"
                  = link_to "编辑", edit_trade_order_path(trade_order), :class => "btn btn-success btn-sm"
                  = link_to "删除", trade_order, :method => :delete, :data => {:confirm => "确定删除当前角色吗?"}, :class => "btn btn-danger btn-sm"

= render "layouts/control_panel"
