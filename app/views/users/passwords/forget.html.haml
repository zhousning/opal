- provide(:title, t('.title'))

= devise_error_messages!
.container-fluid.h-100
  .row.h-100.py-5.px-5
    .col-12
      = form_for(@user, url: update_password_path(@user), html: {method: :patch}) do |f|
        .form-group.row.justify-content-center.mb-5
          = image_tag 'logo.png', :class => "img-thubnail"
        .form-group.row.mb-5
          %label.col-2.col-form-label.col-form-label-lg.text-right{:for => "phone"}
            = image_tag 'session-phone.png', :class => "img-thubnail"
          .col-10
            = f.phone_field :phone, :class => "form-control border-0 form-control-lg", :placeholder => "手机号"
          .col-12
            %hr
        .form-group.row.mb-5
          %label.col-2.col-form-label.col-form-label-lg.text-right{:for => "password"}
            = image_tag 'session-password.png', :class => "img-thubnail"
          .col-10
            = f.password_field :password, autocomplete: "off", :class => "form-control border-0 form-control-lg", :placeholder => "密码"
          .col-12
            %hr
        .form-group.row.mb-5
          %label.col-2.col-form-label.col-form-label-lg.text-right{:for => "password"}
            = image_tag 'session-password.png', :class => "img-thubnail"
          .col-10
            = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control border-0 form-control-lg", :placeholder => "确认密码"
          .col-12
            %hr
        .form-group.row.mb-5
          .col-8
            = text_field_tag 'confirm_code', nil, :class => "form-control border-0 form-control-lg"
          .col-4
            %button#send-confirm-code.btn.btn-block.btn-lg.btn-primary{:type => "button"}
              验证码
          .col-12
            %hr
        .form-group.row.mb-5
          .col-12
            = f.submit "重置密码", class: "btn btn-success btn-lg btn-block "
