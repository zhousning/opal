- provide(:title, t('.title'))

= devise_error_messages!
.container-fluid.h-100
  .row.h-100.py-5.px-5
    .col-12
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.hidden_field :inviter
        .form-group.row.justify-content-center.mb-5
          = image_tag 'logo.png', :class => "img-thubnail"
        .form-group.row.mb-5
          %label.col-2.col-form-label.col-form-label-lg.text-right{:for => "email"}
            = image_tag 'session-phone.png', :class => "img-thubnail"
          .col-10
            = f.email_field :email, :class => "form-control border-0 form-control-lg", :placeholder => "手机号"
          .col-12
            %hr
        -#
          .form-group.row.mb-5
            %label.col-2.col-form-label.col-form-label-lg{:for => "name"}
              = image_tag 'session-phone.png', :class => "img-thubnail"
            .col-10
              = f.text_field :name, :class => "form-control form-control-lg", :placeholder => "姓名"
        .form-group.row.mb-5
          %label.col-2.col-form-label.col-form-label-lg.text-right{:for => "password"}
            = image_tag 'session-password.png', :class => "img-thubnail"
          .col-10
            = f.password_field :password, autocomplete: "off", :class => "form-control border-0 form-control-lg", :placeholder => "密码"
          .col-12
            %hr
        .form-group.row.mb-5
          %label.col-2.col-form-label.col-form-label-lg.text-right{:for => "password"}
            = image_tag 'session-password.png', :class => "img-thubnail"
          .col-10
            = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control border-0 form-control-lg", :placeholder => "确认密码"
          .col-12
            %hr
        .form-group.row.mb-5
          .col-12
            = f.submit "注 册", class: "btn btn-success btn-lg btn-block "
        .form-group.row.mb-5
          .col-12
            = link_to "登 录", login_users_path, :class => "btn btn-info btn-lg btn-block "
        .help-block
          点击注册，表明你同意我们的 
          %a 服务条款
          和
          %a 隐私政策
