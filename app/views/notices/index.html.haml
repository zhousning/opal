- provide(:title, t('.title'))

.container-fluid.py-5
  .row.mb-5
    .col-md-3
      = render "layouts/system_search"
    .col-md-2
      = link_to "添加", new_notice_path, :class => "btn btn-info"
  .row.buyer-table-ctn
    .col-md-12
      %table.table.text-center.table-bordered.table-list-search
        %thead
          %tr
            %th #
          
            %th 
              = Setting.notices.title
            %th
        %tbody
          - @notices.each_with_index do |notice, index|
            %tr
              %td
                = index+1
            
              %td
                = notice.title
              %td
                = link_to "查看", notice_path(notice), :class => "btn btn-primary btn-sm"
                = link_to "编辑", edit_notice_path(notice), :class => "btn btn-success btn-sm"
                = link_to "删除", notice, :method => :delete, :data => {:confirm => "确定删除当前角色吗?"}, :class => "btn btn-danger btn-sm"

