.container-fluid
  .row.justify-content-sm-center
    .col-sm-6
      = form_for @tree do |f|
        - if @tree.errors.any?
          #error_explanation
            %h2= "#{pluralize(@tree.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @tree.errors.full_messages.each do |msg|
                %li= msg
      
        .form-group.row
          = f.label Setting.trees.name, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.text_field :name, :class => "form-control"
          
        .form-group.row
          = f.label Setting.trees.count, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.number_field :count, :class => "form-control"
          
      
        .form-group.row
          .col-sm-3.offset-sm-2
            = f.submit '保存', :class => "btn btn-success"
          .col-sm-3.offset-sm-1
            = link_to '返回', trees_path, :class => "btn btn-danger"
