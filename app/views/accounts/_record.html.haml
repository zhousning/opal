.card-header.bg-white.py-4
  .row
    .col-12
      %h3
        账户记录
.card-body.text-center.py-4
  .row
    .col-12
      - if @orders
        %table.table
          %thead
            %tr
              %th
                日期
              %th
                项目
              %th
                金额
          %tbody
            - @orders.each_with_index do |order, index|
              %tr
                %td
                  = order.created_at.strftime("%Y-%m-%d %H:%M")
                %td
                  = order.subject
                %td
                  = order.coin
      - else
        %h3.text-center
          暂无记录
