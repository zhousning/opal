.container-fluid
  .row.justify-content-sm-center
    .col-sm-6
      = form_for @leaf do |f|
        - if @leaf.errors.any?
          #error_explanation
            %h2= "#{pluralize(@leaf.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @leaf.errors.full_messages.each do |msg|
                %li= msg
      
        .form-group.row
          = f.label Setting.leafs.pick, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.number_field :pick, :class => "form-control"
          
        .form-group.row
          = f.label Setting.leafs.unpick, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.number_field :unpick, :class => "form-control"
          
        .form-group.row
          = f.label Setting.leafs.count, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.number_field :count, :class => "form-control"
          
        .form-group.row
          = f.label Setting.leafs.pick_time, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.date_field :pick_time, :class => "form-control"
          
      
        .form-group.row
          .col-sm-3.offset-sm-2
            = f.submit '保存', :class => "btn btn-success"
          .col-sm-3.offset-sm-1
            = link_to '返回', leafs_path, :class => "btn btn-danger"
