- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid
    .row
      .col-md-3
        = render "layouts/system_search"
      .col-md-2
        = link_to "添加", new_leaf_path, :class => "btn btn-info"
    .row.buyer-table-ctn
      .col-md-12
        %table.table.text-center.table-bordered.table-list-search
          %thead
            %tr
              %th #
            
              %th 
                = Setting.leafs.pick
              %th 
                = Setting.leafs.unpick
              %th 
                = Setting.leafs.count
              %th 
                = Setting.leafs.pick_time
              %th
          %tbody
            - @leafs.each_with_index do |leaf, index|
              %tr
                %td
                  = index+1
              
                %td
                  = leaf.pick
                %td
                  = leaf.unpick
                %td
                  = leaf.count
                %td
                  = leaf.pick_time
                %td
                  = link_to "查看", leaf_path(leaf), :class => "btn btn-primary btn-sm"
                  = link_to "编辑", edit_leaf_path(leaf), :class => "btn btn-success btn-sm"
                  = link_to "删除", leaf, :method => :delete, :data => {:confirm => "确定删除当前角色吗?"}, :class => "btn btn-danger btn-sm"

= render "layouts/control_panel"
