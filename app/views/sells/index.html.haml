- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid
    .row
      .col-md-3
        = render "layouts/system_search"
      .col-md-2
        = link_to "添加", new_sell_path, :class => "btn btn-info"
    .row.buyer-table-ctn
      .col-md-12
        %table.table.text-center.table-bordered.table-list-search
          %thead
            %tr
              %th #
            
              %th 
                = Setting.sells.price
              %th 
                = Setting.sells.count
              %th
          %tbody
            - @sells.each_with_index do |sell, index|
              %tr
                %td
                  = index+1
              
                %td
                  = sell.price
                %td
                  = sell.count
                %td
                  = link_to "查看", sell_path(sell), :class => "btn btn-primary btn-sm"
                  = link_to "编辑", edit_sell_path(sell), :class => "btn btn-success btn-sm"
                  = link_to "删除", sell, :method => :delete, :data => {:confirm => "确定删除当前角色吗?"}, :class => "btn btn-danger btn-sm"

= render "layouts/control_panel"
