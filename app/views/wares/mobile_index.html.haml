          .card
            = image_tag ware.enclosures[0].file_url(:big), :class => "card-img-top"
            .card-body
              %h5.card-title
                = truncate(ware.title, :length => 17)
              %h3.card-text.d-flex.justify-content-between
                %span.text-left.text-danger
