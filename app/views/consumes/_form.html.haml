.container-fluid
  .row.justify-content-sm-center
    .col-sm-6
      = form_for @consume do |f|
        - if @consume.errors.any?
          #error_explanation
            %h2= "#{pluralize(@consume.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @consume.errors.full_messages.each do |msg|
                %li= msg
      
        .form-group.row
          = f.label Setting.consumes.number, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.text_field :number, :class => "form-control"
          
        .form-group.row
          = f.label Setting.consumes.category, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.text_field :category, :class => "form-control"
          
        .form-group.row
          = f.label Setting.consumes.coin_cost, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.number_field :coin_cost, :class => "form-control"
          
        .form-group.row
          = f.label Setting.consumes.coin_now, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.number_field :coin_now, :class => "form-control"
          
        .form-group.row
          = f.label Setting.consumes.status, :class => "col-sm-3 col-form-label"
          .col-sm-9
            = f.text_field :status, :class => "form-control"
          
      
        .form-group.row
          .col-sm-3.offset-sm-2
            = f.submit '保存', :class => "btn btn-success"
          .col-sm-3.offset-sm-1
            = link_to '返回', consumes_path, :class => "btn btn-danger"
