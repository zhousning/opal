- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid
    .row
      .col-md-3
        = render "layouts/system_search"
      .col-md-2
        = link_to "添加", new_consume_path, :class => "btn btn-info"
    .row.buyer-table-ctn
      .col-md-12
        %table.table.text-center.table-bordered.table-list-search
          %thead
            %tr
              %th #
            
              %th 
                = Setting.consumes.number
              %th 
                = Setting.consumes.category
              %th 
                = Setting.consumes.coin_cost
              %th 
                = Setting.consumes.coin_now
              %th 
                = Setting.consumes.status
              %th
          %tbody
            - @consumes.each_with_index do |consume, index|
              %tr
                %td
                  = index+1
              
                %td
                  = consume.number
                %td
                  = consume.category
                %td
                  = consume.coin_cost
                %td
                  = consume.coin_now
                %td
                  = consume.status
                %td
                  = link_to "查看", consume_path(consume), :class => "btn btn-primary btn-sm"
                  = link_to "编辑", edit_consume_path(consume), :class => "btn btn-success btn-sm"
                  = link_to "删除", consume, :method => :delete, :data => {:confirm => "确定删除当前角色吗?"}, :class => "btn btn-danger btn-sm"

= render "layouts/control_panel"
